{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,

    "target": "ES2022",
    "lib": ["ESNext", "DOM"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    "types": ["node"]
  }
}